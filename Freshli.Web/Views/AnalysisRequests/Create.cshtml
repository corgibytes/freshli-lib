@model AnalysisRequest
@{
    ViewData["Title"] = "Home";
    var siteKey = Environment.GetEnvironmentVariable("RECAPTCHA_SITE_KEY");
}
<script src="https://www.google.com/recaptcha/api.js"></script>
<script>
    function onSubmit() {
        document.getElementById("create-request").submit();
    }
</script>
<div>
    <form id="create-request" asp-route="CreateAnalysisRequest" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="form-group required">
            <div>
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" type="email" class="form-control" required/>
            </div>
        </div>
        <div class="form-group required">
            <div>
                <label asp-for="Url">Public Git URL</label>
                <input asp-for="Url" type="url" class="form-control" placeholder="https://github.com/github/octobox" required/>
            </div>
        </div>
        <button class="btn btn-primary g-recaptcha" data-sitekey="@siteKey" 
                data-callback="onSubmit" data-action="submit" type="submit">Analyze</button>
    </form>
</div>
